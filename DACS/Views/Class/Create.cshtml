@model DACS.Models.Class
@using DACS.Models

@{
    Layout = "_Layout";
    ViewData["Title"] = "Create Class";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <!--Bootstrap CSS -->
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container mt-5">
        <h1 class="mb-4">Create New Class</h1>
        <div class="card">
            <div class="card-body">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-group">
                        <label asp-for="MaPhongHoc" class="control-label">Mã phòng học</label>
                        <input asp-for="MaPhongHoc" class="form-control" placeholder="Nhập mã phòng học">
                        <span asp-validation-for="MaPhongHoc" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="SoPhong" class="control-label">Số phòng</label>
                        <input asp-for="SoPhong" class="form-control" placeholder="Nhập số phòng">
                        <span asp-validation-for="SoPhong" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Tang" class="control-label">Tầng</label>
                        <input asp-for="Tang" class="form-control" placeholder="Nhập tầng">
                        <span asp-validation-for="Tang" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="TrangThai" class="control-label">Trạng thái</label>
                        <select asp-for="TrangThai" class="form-control">
                            @foreach (var status in Enum.GetValues(typeof(ClassStatus)).Cast<Enum>())
                            {
                                <option value="@status">@status.GetDisplayName()</option>
                            }
                        </select>
                        <span asp-validation-for="TrangThai" class="text-danger"></span>
                    </div>


                    <div class="form-group">
                        <label asp-for="GhiChu" class="control-label">Notes</label>
                        <input asp-for="GhiChu" class="form-control" placeholder="Nhập ghi chú">
                        <span asp-validation-for="GhiChu" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <input type="submit" value="Create" class="btn btn-primary">
                    </div>
                </form>
            </div>
        </div>

        <div class="mt-3">
            <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
        </div>
    </div>

    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
</body>
</html>
