@model IEnumerable<DACS.Models.LoanEquipmentTicket>

@{
    ViewData["Title"] = "Phiếu Mượn Thiết Bị";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #f8f9fa; /* light grey background */
        }

        .card {
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }

            .card:hover {
                transform: scale(1.03);
                box-shadow: 0 10px 20px rgba(0, 0, 0, 0.2);
            }

        .card-header {
            font-size: 16px;
        }

        .card-title {
            margin-bottom: 10px;
        }

        .btn-outline-primary {
            margin-right: 5px;
        }
    </style>
</head>
<body>
    <h1 class="text-center mb-4">@ViewData["Title"]</h1>

    <div class="container">
        <div class="row">
            @foreach (var ticket in Model)
            {
                <div class="col-md-4 mb-3">
                    <div class="card shadow">
                        <div class="card-header bg-primary text-white">
                            <strong>Ticket ID:</strong> @ticket.MaPhieuMuon
                        </div>
                        <div class="card-body bg-light">
                            <h5 class="card-title">
                                <i class="fas fa-user"></i> @ticket.TenNguoiMuon
                            </h5>
                            <p class="card-text">
                                <i class="fas fa-building"></i> Phòng: @ticket.Class.MaPhongHoc
                                <br>
                                <i class="fas fa-tools"></i> Thiết bị: @ticket.LoanEquipment?.TenThietBiMuon 
                                <br>
                                <i class="fas fa-sort-numeric-up"></i> Số lượng: @ticket.SoLuongMuon
                                <br>
                                <i class="fas fa-calendar-alt"></i> Mượn lúc: @ticket.NgayMuon.ToString("dd-MM-yyyy HH:mm")
                            </p>
                        </div>
                        <div class="card-footer bg-white">
                            <a href="@Url.Action("Details", "LoanEquipmentTicket", new { id = ticket.MaPhieuMuon })" class="btn btn-outline-primary btn-sm">View</a>
                            <a href="@Url.Action("Edit", "LoanEquipmentTicket", new { id = ticket.MaPhieuMuon })" class="btn btn-outline-secondary btn-sm">Edit</a>
                            <a href="@Url.Action("Delete", "LoanEquipmentTicket", new { id = ticket.MaPhieuMuon })" class="btn btn-outline-danger btn-sm">Delete</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</body>
</html>
