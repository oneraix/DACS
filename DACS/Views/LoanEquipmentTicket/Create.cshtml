@model DACS.Models.LoanEquipmentTicket

@{
    ViewData["Title"] = "Create Loan Ticket";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            padding-top: 40px;
            padding-bottom: 40px;
            background-color: #f5f5f5;
        }

        .form-container {
            max-width: 400px;
            padding: 15px;
            margin: 0 auto;
        }

            .form-container form {
                margin-bottom: 15px;
                background: #fff;
                box-shadow: 0 2px 2px rgba(0, 0, 0, 0.3);
                padding: 20px;
                border-radius: 5px;
            }

            .form-container h2 {
                margin-bottom: 20px;
            }

            .form-container a {
                display: inline-block;
                margin-top: 10px;
            }
    </style>
</head>
<body>
    <div class="form-container">
        <h2>@ViewData["Title"]</h2>

        <form asp-action="Create" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="TenNguoiMuon" class="control-label">Borrower's Name</label>
                <input asp-for="TenNguoiMuon" class="form-control" />
                <span asp-validation-for="TenNguoiMuon" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="MaThietBiMuon">Equipment Name</label>
                <select asp-for="MaThietBiMuon" asp-items="@ViewBag.Equipments" class="form-control"></select>
                <span asp-validation-for="MaThietBiMuon" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="SoLuongMuon" class="control-label">Quantity</label>
                <input asp-for="SoLuongMuon" type="number" class="form-control" />
                <span asp-validation-for="SoLuongMuon" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="NgayMuon" class="control-label">Borrow Date</label>
                <input asp-for="NgayMuon" type="date" class="form-control" />
                <span asp-validation-for="NgayMuon" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="MaPhongHoc">Classroom ID</label>
                <select asp-for="MaPhongHoc" asp-items="@ViewBag.Classrooms" class="form-control"></select>
                <span asp-validation-for="MaPhongHoc" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="SDT" class="control-label">Phone Number</label>
                <input asp-for="SDT" class="form-control" />
                <span asp-validation-for="SDT" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary">Create</button>
        </form>

        <a href="@Url.Action("Index")" class="btn btn-secondary">Back to List</a>
    </div>
</body>
</html>

