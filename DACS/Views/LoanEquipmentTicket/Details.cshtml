@model DACS.Models.LoanEquipmentTicket

@{
    ViewData["Title"] = "Loan Equipment Ticket Details";
}

<style>
    .container {
        max-width: 800px;
    }

    .card-header {
        font-size: 1.25rem;
    }

    .form-control-plaintext {
        padding: 0.375rem 0;
        margin-bottom: 0;
    }

    .btn {
        padding: 0.375rem 0.75rem;
    }
</style>

<h2 class="text-center my-4">@ViewData["Title"]</h2>

<div class="container mt-5">
    <div class="card border-info">
        <div class="card-header bg-info text-white">
            <h4 class="m-0">Ticket Details</h4>
        </div>
        <div class="card-body">
            <div class="row mb-3">
                <label class="col-sm-3 col-form-label">Ticket ID:</label>
                <div class="col-sm-9">
                    <p class="form-control-plaintext text-secondary">@Model.MaPhieuMuon</p>
                </div>
            </div>
            <div class="row mb-3">
                <label class="col-sm-3 col-form-label">Borrower's Name:</label>
                <div class="col-sm-9">
                    <p class="form-control-plaintext text-secondary">@Model.TenNguoiMuon</p>
                </div>
            </div>
            <div class="row mb-3">
                <label class="col-sm-3 col-form-label">Phone Number:</label>
                <div class="col-sm-9">
                    <p class="form-control-plaintext text-secondary">@Model.SDT</p>
                </div>
            </div>
            <div class="row mb-3">
                <label class="col-sm-3 col-form-label">Equipment ID:</label>
                <div class="col-sm-9">
                    <p class="form-control-plaintext text-secondary">@Model.MaThietBiMuon</p>
                </div>
            </div>
            <div class="row mb-3">
                <label class="col-sm-3 col-form-label">Quantity Borrowed:</label>
                <div class="col-sm-9">
                    <p class="form-control-plaintext text-secondary">@Model.SoLuongMuon</p>
                </div>
            </div>
            <div class="row mb-3">
                <label class="col-sm-3 col-form-label">Borrow Date:</label>
                <div class="col-sm-9">
                    <p class="form-control-plaintext text-secondary">@Model.NgayMuon.ToString("yyyy-MM-dd")</p>
                </div>
            </div>
            <div class="row mb-3">
                <label class="col-sm-3 col-form-label">Return Date:</label>
                <div class="col-sm-9">
                    <p class="form-control-plaintext text-secondary">@(Model.NgayTra?.ToString("yyyy-MM-dd") ?? "Not Returned Yet")</p>
                </div>
            </div>
            <div class="row mb-3">
                <label class="col-sm-3 col-form-label">Classroom ID:</label>
                <div class="col-sm-9">
                    <p class="form-control-plaintext text-secondary">@Model.MaPhongHoc</p>
                </div>
            </div>
            <div class="text-end">
                <a href="@Url.Action("Edit", new { id = Model.MaPhieuMuon })" class="btn btn-primary me-2">Edit</a>
                <a href="@Url.Action("Delete", new { id = Model.MaPhieuMuon })" class="btn btn-danger">Delete</a>
                <a href="@Url.Action("Index")" class="btn btn-secondary">Back to List</a>
            </div>
        </div>
    </div>
</div>

<script>
    document.querySelector('.btn-danger').addEventListener('click', function (event) {
        if (!confirm('Are you sure you want to delete this ticket?')) {
            event.preventDefault();
        }
    });
</script>