@model IEnumerable<DACS.Models.SupportRequest>

@{
    ViewData["Title"] = "Lịch Sử Yêu Cầu Hỗ Trợ";
    Layout = "~/Areas/GV/Views/Shared/_GVLayout.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <style>
        body {
            background-color: #f8f9fa;
        }

        .text-primary {
            color: #6f42c1;
        }

        .text-secondary {
            color: #6c757d;
        }

        .table thead th {
            background-color: #f8f9fa;
            color: #343a40;
        }

        .table tbody td {
            color: #495057;
        }

        .btn-primary {
            background-color: #6f42c1;
            border-color: #6f42c1;
            color: #fff;
        }

        .btn-success {
            background-color: #28a745;
            border-color: #28a745;
            color: #fff;
        }

        .title {
            text-align: center;
            font-weight: bold;
            text-transform: uppercase;
            margin-bottom: 20px;
            color: #6f42c1;
        }

        .form-container {
            background-color: #fff;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            margin-bottom: 20px;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .form-group label {
            font-weight: bold;
            color: #343a40;
        }

        .filter-left {
            display: flex;
            align-items: center;
        }

            .filter-left .form-group {
                margin-right: 15px;
            }

        .filter-right {
            display: flex;
            align-items: center;
        }

            .filter-right .form-group {
                margin-right: 15px;
            }
    </style>
</head>
<body>
    <div class="container mt-5">
        <h1 class="title">@ViewData["Title"]</h1>
        <div class="form-container">
            <div>
                <a asp-action="Create" class="btn btn-success">Tạo yêu cầu hỗ trợ</a>
            </div>
        </div>

        <table class="table table-bordered table-hover">
            <thead class="thead-light">
                <tr>
                    <th>Mô tả</th>
                    <th>Mã phòng</th>
                    <th>Loại vấn đề</th>
                    <th>Chi tiết vấn đề</th>
                    <th>Ngày báo cáo</th>
                    <th>Trạng thái</th>
                    <th>Hành động</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Description</td>
                        <td>@item.MaPhongHoc</td>
                        <td>@item.IssueCategory.IssueCategoryName</td>
                        <td>@item.IssueDetail.Description</td>
                        <td>@item.ReportDate.ToString("dd-MM-yyyy")</td>
                        <td>@(item.IsResolved ? "Đã giải quyết" : "Chưa giải quyết")</td>
                        <td>
                            <a asp-action="Details" asp-route-id="@item.RequestId" class="btn btn-info btn-sm">Xem</a>
                            <a asp-action="Edit" asp-route-id="@item.RequestId" class="btn btn-warning btn-sm">Sửa</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</body>
</html>
