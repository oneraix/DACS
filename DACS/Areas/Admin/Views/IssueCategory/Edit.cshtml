@model DACS.Models.IssueCategory

@{
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Edit Issue Category";
}

<div class="container mt-5">
    <h1 class="mb-4">@ViewData["Title"]</h1>

    <form asp-action="Edit" method="post">
        <div class="form-group">
            <label asp-for="IssueCategoryName" class="control-label"></label>
            <input asp-for="IssueCategoryName" class="form-control" />
            <span asp-validation-for="IssueCategoryName" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary">Save</button>
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </form>
</div>
