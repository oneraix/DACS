@model DACS.Models.IssueCategory

@{
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Xóa loại vấn đề";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <style>
        .text-primary {
            color: #6f42c1;
        }

        .form-container {
            background-color: #f8f9fa;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            max-width: 600px;
            margin: auto;
        }

        .form-group label {
            font-weight: bold;
            color: #343a40;
        }

        .form-group input,
        .form-group select {
            border-radius: 5px;
        }

        .form-group span {
            font-size: 0.875em;
        }

        .btn-container {
            text-align: right;
        }

        .title {
            text-align: center;
            font-weight: bold;
            text-transform: uppercase;
            margin-bottom: 20px;
            color: #6f42c1;
        }

        .btn-primary {
            background-color: #007bff;
            border-color: #007bff;
            color: #fff;
        }

        .btn-secondary {
            background-color: #6c757d;
            border-color: #6c757d;
            color: #fff;
        }

        .btn-danger {
            background-color: #dc3545;
            border-color: #dc3545;
            color: #fff;
        }

            .btn-primary:hover,
            .btn-secondary:hover,
            .btn-danger:hover {
                color: #fff;
            }
    </style>
</head>
<body>
    <div class="container mt-5">
        <h1 class="mb-4 title">@ViewData["Title"]</h1>

        <div class="form-container">
            <h3>Bạn có chắc chắn muốn xóa loại vấn đề này?</h3>
            <dl class="row">
                <dt class="col-sm-4">Tên loại vấn đề</dt>
                <dd class="col-sm-8">@Model.IssueCategoryName</dd>
            </dl>

            <form asp-action="Delete" method="post">
                <input type="hidden" asp-for="IssueCategoryId" />
                <div class="btn-container">
                    <button type="submit" class="btn btn-danger">Xóa</button>
                    <a asp-action="Index" class="btn btn-secondary ml-2">Quay lại danh sách</a>
                </div>
            </form>
        </div>
    </div>
</body>
</html>
