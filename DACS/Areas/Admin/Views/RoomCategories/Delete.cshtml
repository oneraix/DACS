@model DACS.Models.RoomCategories

@{
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Delete Room Category";
}

<div class="container mt-5">
    <h1 class="mb-4">@ViewData["Title"]</h1>

    <h3>Are you sure you want to delete this?</h3>

    <div class="form-group">
        <label>Mã Loại Phòng</label>
        <p class="form-control-static">@Model.MaLoaiPhong</p>
    </div>
    <div class="form-group">
        <label>Tên Loại Phòng</label>
        <p class="form-control-static">@Model.TenLoaiPhong</p>
    </div>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="MaLoaiPhong" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </form>
</div>
