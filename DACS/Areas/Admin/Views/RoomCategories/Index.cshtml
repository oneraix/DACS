@model IEnumerable<DACS.Models.RoomCategories>

@{
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Danh sách loại phòng";
}

<div class="container mt-5">
    <h1 class="mb-4">@ViewData["Title"]</h1>
    <div class="mb-3">
        <a asp-action="Create" class="btn btn-primary">Create New</a>
    </div>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Mã Loại Phòng</th>
                <th>Tên Loại Phòng</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.MaLoaiPhong</td>
                    <td>@item.TenLoaiPhong</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.MaLoaiPhong" class="btn btn-sm btn-primary">Edit</a>
                        <a asp-action="Details" asp-route-id="@item.MaLoaiPhong" class="btn btn-sm btn-info">Details</a>
                        <a asp-action="Delete" asp-route-id="@item.MaLoaiPhong" class="btn btn-sm btn-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
