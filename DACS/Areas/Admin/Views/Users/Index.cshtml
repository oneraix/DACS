@model IEnumerable<DACS.Models.ApplicationUser>

@{
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Danh sách tài khoản";
}

<div class="container mt-5">
    <h1 class="mb-4">@ViewData["Title"]</h1>
    <div class="mb-3">
        <a asp-action="Create" class="btn btn-primary">Create New</a>
    </div>
    <div class="mb-3">
        <form asp-action="Index" method="get">
            <div class="form-row">
                <div class="col-md-4 mb-3">
                    <input type="text" name="searchTerm" class="form-control" placeholder="Search by email, name, phone, or MaNhanVien" value="@ViewBag.SearchTerm" />
                </div>
                <div class="col-md-4 mb-3">
                    <select name="roleName" class="form-control">
                        <option value="">All Roles</option>
                        @foreach (var role in ViewBag.Roles)
                        {
                            var isSelected = role.Name == ViewBag.SelectedRole ? "selected" : "";
                            <option value="@role.Name" selected="@isSelected">@role.Name</option>
                        }
                    </select>
                </div>
                <div class="col-md-4 mb-3">
                    <button type="submit" class="btn btn-primary">Search</button>
                </div>
            </div>
        </form>
    </div>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Email</th>
                <th>Full Name</th>
                <th>Phone Number</th>
                <th>MaNhanVien</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Email</td>
                    <td>@item.FullName</td>
                    <td>@item.PhoneNumber</td>
                    <td>@item.MaNhanVien</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-primary">Edit</a>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">Details</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
