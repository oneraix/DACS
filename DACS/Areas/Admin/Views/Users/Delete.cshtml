@model DACS.Models.ApplicationUser

@{
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Delete Account";
}

<div class="container mt-5">
    <h1 class="mb-4">@ViewData["Title"]</h1>
    <h3>Are you sure you want to delete this account?</h3>
    <div class="card">
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-4">Email:</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Email)</dd>
                <dt class="col-sm-4">Full Name:</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.FullName)</dd>
                <dt class="col-sm-4">Phone Number:</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.PhoneNumber)</dd>
                <dt class="col-sm-4">Employee ID:</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.MaNhanVien)</dd>
            </dl>
            <form asp-action="Delete">
                <input type="hidden" asp-for="Id" />
                <input type="submit" value="Delete" class="btn btn-danger" />
                <a asp-action="Index" class="btn btn-secondary ml-2">Back to List</a>
            </form>
        </div>
    </div>
</div>
