@model DACS.Models.ApplicationUser

@{
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Chỉnh sửa tài khoản";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <style>
        body {
            background-color: #f8f9fa; /* Light grey background */
        }

        .text-primary {
            color: #6f42c1; /* Purple color */
        }

        .text-secondary {
            color: #6c757d;
        }

        .card {
            max-width: 600px;
            margin: 0 auto;
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }

            .card:hover {
                transform: scale(1.03);
                box-shadow: 0 10px 20px rgba(0, 0, 0, 0.2);
            }

        .card-header {
            font-size: 16px;
            background-color: #6f42c1; /* Purple color */
            color: #fff;
            text-align: center;
            text-transform: uppercase;
            font-weight: bold;
        }

        .card-body {
            background-color: #fff;
            padding: 20px;
        }

        .form-group label {
            font-weight: bold;
        }

        .btn-primary {
            background-color: #6f42c1; /* Purple color */
            border-color: #6f42c1;
            color: #fff;
        }

        .btn-secondary {
            background-color: #6c757d;
            border-color: #6c757d;
            color: #fff;
        }

            .btn-primary:hover,
            .btn-secondary:hover {
                color: #fff;
            }

        .title {
            text-align: center;
            font-weight: bold;
            text-transform: uppercase;
            margin-bottom: 20px;
            color: #6f42c1; /* Purple color */
        }
    </style>
</head>
<body>
    <div class="container mt-5">
        <h1 class="title text-primary">@ViewData["Title"]</h1>

        <div class="card">
            <div class="card-header">Chỉnh sửa tài khoản</div>
            <div class="card-body">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                    <input type="hidden" asp-for="Id" />
                    <div class="form-group">
                        <label asp-for="Email">Email</label>
                        <input asp-for="Email" class="form-control" readonly>
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="FullName">Tên đầy đủ</label>
                        <input asp-for="FullName" class="form-control" placeholder="Nhập tên đầy đủ">
                        <span asp-validation-for="FullName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="PhoneNumber">Số điện thoại</label>
                        <input asp-for="PhoneNumber" class="form-control" placeholder="Nhập số điện thoại">
                        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="MaNhanVien">Mã nhân viên</label>
                        <input asp-for="MaNhanVien" class="form-control" placeholder="Nhập mã nhân viên">
                        <span asp-validation-for="MaNhanVien" class="text-danger"></span>
                    </div>
                    <div class="btn-container d-flex justify-content-between">
                        <button type="submit" class="btn btn-primary">Lưu</button>
                        <a asp-action="Index" class="btn btn-secondary">Quay lại danh sách</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</body>
</html>
