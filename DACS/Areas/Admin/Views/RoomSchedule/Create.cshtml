@model DACS.Models.RoomSchedule

@{
    ViewData["Title"] = "Tạo Lịch Sử Dụng Phòng";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="container mt-5">
    <h1 class="mb-4">@ViewData["Title"]</h1>

    <form asp-action="Create" method="post">
        <div class="form-group">
            <label asp-for="MonHoc" class="control-label"></label>
            <input asp-for="MonHoc" class="form-control" />
            <span asp-validation-for="MonHoc" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="GiangVien" class="control-label"></label>
            <input asp-for="GiangVien" class="form-control" />
            <span asp-validation-for="GiangVien" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="PhongHoc" class="control-label"></label>
            <input asp-for="PhongHoc" class="form-control" />
            <span asp-validation-for="PhongHoc" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Ngay" class="control-label"></label>
            <input asp-for="Ngay" class="form-control" type="date" />
            <span asp-validation-for="Ngay" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="ThoiGianBatDau" class="control-label"></label>
            <input asp-for="ThoiGianBatDau" class="form-control" type="time" />
            <span asp-validation-for="ThoiGianBatDau" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="ThoiGianKetThuc" class="control-label"></label>
            <input asp-for="ThoiGianKetThuc" class="form-control" type="time" />
            <span asp-validation-for="ThoiGianKetThuc" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary">Lưu</button>
    </form>
</div>
