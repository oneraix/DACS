@model DACS.Models.RoomSchedule

@{
    ViewData["Title"] = "Chỉnh Sửa Lịch Sử Dụng Phòng";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <style>
        body {
            background-color: #f8f9fa;
        }

        .text-primary {
            color: #6f42c1;
        }

        .card {
            max-width: 800px;
            margin: 0 auto;
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }

            .card:hover {
                transform: scale(1.03);
                box-shadow: 0 10px 20px rgba(0, 0, 0, 0.2);
            }

        .card-header {
            font-size: 16px;
            background-color: #6f42c1;
            color: #fff;
            text-align: center;
            text-transform: uppercase;
            font-weight: bold;
        }

        .card-body {
            background-color: #fff;
            padding: 20px;
        }

        .form-group label {
            font-weight: bold;
            color: #343a40;
        }

        .form-group input,
        .form-group select {
            border-radius: 5px;
        }

        .form-group span {
            font-size: 0.875em;
        }

        .btn-container {
            text-align: right;
        }

        .btn {
            padding: 0.375rem 0.75rem;
        }

        .btn-primary {
            background-color: #6f42c1;
            border-color: #6f42c1;
            color: #fff;
        }

        .btn-secondary {
            background-color: #6c757d;
            border-color: #6c757d;
            color: #fff;
        }

            .btn-primary:hover,
            .btn-secondary:hover {
                color: #fff;
            }
    </style>
</head>
<body>
    <div class="container mt-5">
        <h1 class="text-center mb-4 text-primary">@ViewData["Title"]</h1>

        <div class="card">
            <div class="card-header">Chỉnh Sửa Lịch Sử Dụng Phòng</div>
            <div class="card-body">
                <form asp-action="Edit" method="post">
                    <input type="hidden" asp-for="Id" />
                    <div class="form-group">
                        <label asp-for="MonHoc" class="text-primary">Tên Môn Học</label>
                        <input asp-for="MonHoc" class="form-control" />
                        <span asp-validation-for="MonHoc" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="GiangVien" class="text-primary">Tên Giảng Viên</label>
                        <input asp-for="GiangVien" class="form-control" />
                        <span asp-validation-for="GiangVien" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="PhongHoc" class="text-primary">Mã Phòng Học</label>
                        <input asp-for="PhongHoc" class="form-control" />
                        <span asp-validation-for="PhongHoc" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Ngay" class="text-primary">Ngày Học</label>
                        <input asp-for="Ngay" type="date" class="form-control" />
                        <span asp-validation-for="Ngay" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ThoiGianBatDau" class="text-primary">Thời Gian Bắt Đầu</label>
                        <input asp-for="ThoiGianBatDau" type="time" class="form-control" />
                        <span asp-validation-for="ThoiGianBatDau" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ThoiGianKetThuc" class="text-primary">Thời Gian Kết Thúc</label>
                        <input asp-for="ThoiGianKetThuc" type="time" class="form-control" />
                        <span asp-validation-for="ThoiGianKetThuc" class="text-danger"></span>
                    </div>
                    <div class="btn-container">
                        <button type="submit" class="btn btn-primary">Lưu</button>
                        <a asp-action="Index" class="btn btn-secondary ml-2">Quay lại danh sách</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</body>
</html>
