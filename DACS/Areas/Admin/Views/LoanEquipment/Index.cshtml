@model IEnumerable<DACS.Models.LoanEquipment>

@{
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Danh sách thiết bị mượn";
}

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="mb-0">@ViewData["Title"]</h1>
        <a asp-action="Create" class="btn btn-primary">Tạo mới thiết bị mượn</a>
    </div>

    <table class="table table-bordered table-hover">
        <thead class="thead-light">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.First().MaThietBiMuon)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.First().TenThietBiMuon)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.First().SoLuong)
                </th>
                <th class="text-center">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.MaThietBiMuon)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TenThietBiMuon)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.SoLuong)
                    </td>
                    <td class="text-center">
                        <a asp-action="Edit" asp-route-id="@item.MaThietBiMuon" class="btn btn-sm btn-primary">Sửa</a>
                        <a asp-action="Details" asp-route-id="@item.MaThietBiMuon" class="btn btn-sm btn-info">Chi tiết</a>
                        <a asp-action="Delete" asp-route-id="@item.MaThietBiMuon" class="btn btn-sm btn-danger">Xóa</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
