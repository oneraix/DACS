@model IEnumerable<DACS.Models.LoanEquipment>

@{
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Danh sách thiết bị mượn";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <style>
        .text-primary {
            color: #007bff;
        }

        .text-secondary {
            color: #6c757d;
        }

        .table thead th {
            background-color: #f8f9fa;
            color: #343a40;
        }

        .table tbody td {
            color: #495057;
        }

        .btn-primary {
            background-color: #007bff;
            border-color: #007bff;
            color: #fff;
        }

        .btn-info {
            background-color: #17a2b8;
            border-color: #17a2b8;
            color: #fff;
        }

        .btn-danger {
            background-color: #dc3545;
            border-color: #dc3545;
            color: #fff;
        }

        .btn-success {
            background-color: #28a745;
            border-color: #28a745;
            color: #fff;
        }

            .btn-primary:hover,
            .btn-info:hover,
            .btn-danger:hover,
            .btn-success:hover {
                color: #fff;
            }

        .title {
            text-align: center;
            font-weight: bold;
            text-transform: uppercase;
        }
    </style>
</head>
<body>
    <div class="container mt-5">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1 class="mb-0 text-primary title">@ViewData["Title"]</h1>
            <a asp-action="Create" class="btn btn-success">Tạo mới thiết bị mượn</a>
        </div>

        <table class="table table-bordered table-hover">
            <thead class="thead-light">
                <tr>
                    <th class="text-center text-primary">Mã Thiết Bị Mượn</th>
                    <th class="text-center text-primary">Tên Thiết Bị Mượn</th>
                    <th class="text-center text-primary">Số Lượng</th>
                    <th class="text-center text-primary">Hành Động</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="text-center">@Html.DisplayFor(modelItem => item.MaThietBiMuon)</td>
                        <td class="text-center">@Html.DisplayFor(modelItem => item.TenThietBiMuon)</td>
                        <td class="text-center">@Html.DisplayFor(modelItem => item.SoLuong)</td>
                        <td class="text-center">
                            <a asp-action="Edit" asp-route-id="@item.MaThietBiMuon" class="btn btn-sm btn-primary">Sửa</a>
                            <a asp-action="Delete" asp-route-id="@item.MaThietBiMuon" class="btn btn-sm btn-danger">Xóa</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }
</body>
</html>
