@model DACS.Models.LoanEquipmentTicket

@{
    ViewData["Title"] = "Delete Loan Ticket";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h1>@ViewData["Title"]</h1>

<h3>Are you sure you want to delete this ticket?</h3>
<div>
    <h4>Loan Ticket</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TenNguoiMuon)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TenNguoiMuon)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.MaThietBiMuon)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.MaThietBiMuon)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.NgayMuon)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NgayMuon)
        </dd>
    </dl>
    <form asp-action="DeleteConfirmed" method="post">
        <input type="hidden" asp-for="MaPhieuMuon" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
