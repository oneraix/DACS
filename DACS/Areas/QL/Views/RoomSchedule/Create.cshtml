@model DACS.Models.RoomSchedule

@{
    Layout = "~/Areas/QL/Views/Shared/_QLLayout.cshtml";
    ViewData["Title"] = "Chỉnh Sửa Lịch Sử Dụng Phòng";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <style>
        body {
            background-color: #f8f9fa;
        }

        .text-primary {
            color: #6f42c1;
        }

        .card {
            max-width: 600px;
            margin: 0 auto;
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }

            .card:hover {
                transform: scale(1.03);
                box-shadow: 0 10px 20px rgba(0, 0, 0, 0.2);
            }

        .card-header {
            font-size: 16px;
            background-color: #6f42c1;
            color: #fff;
            text-align: center;
            text-transform: uppercase;
            font-weight: bold;
        }

        .card-body {
            background-color: #fff;
            padding: 20px;
        }

        .form-group label {
            font-weight: bold;
        }

        .btn-primary {
            background-color: #6f42c1;
            border-color: #6f42c1;
            color: #fff;
        }

        .btn-secondary {
            background-color: #6c757d;
            border-color: #6c757d;
            color: #fff;
        }

            .btn-primary:hover,
            .btn-secondary:hover {
                color: #fff;
            }
    </style>
</head>
<body>
    <div class="container mt-5">
        <div class="card">
            <div class="card-header">Chỉnh Sửa Lịch Sử Dụng Phòng</div>
            <div class="card-body">
                <h2 class="text-center mb-4">@ViewData["Title"]</h2>
                <form asp-action="Edit" method="post">
                    <div asp-validation-summary="All" class="text-danger"></div>

                    <div class="form-group">
                        <label asp-for="GiangVien">Tên Người Dùng</label>
                        <input asp-for="GiangVien" class="form-control" />
                        <span asp-validation-for="GiangVien" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="PhongHoc">Mã Phòng</label>
                        <input asp-for="PhongHoc" class="form-control" />
                        <span asp-validation-for="PhongHoc" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Ngay">Ngày Học</label>
                        <input asp-for="Ngay" type="date" class="form-control" />
                        <span asp-validation-for="Ngay" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="ThoiGianBatDau">Thời Gian Bắt Đầu</label>
                        <input asp-for="ThoiGianBatDau" type="time" class="form-control" />
                        <span asp-validation-for="ThoiGianBatDau" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="ThoiGianKetThuc">Thời Gian Kết Thúc</label>
                        <input asp-for="ThoiGianKetThuc" type="time" class="form-control" />
                        <span asp-validation-for="ThoiGianKetThuc" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="MonHoc">Tên Môn Học</label>
                        <input asp-for="MonHoc" class="form-control" />
                        <span asp-validation-for="MonHoc" class="text-danger"></span>
                    </div>

                    <div class="d-flex justify-content-between">
                        <button type="submit" class="btn btn-success">Lưu</button>
                        <a asp-action="Index" class="btn btn-secondary">Quay lại danh sách</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</body>
</html>
