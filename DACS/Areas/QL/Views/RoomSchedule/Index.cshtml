@model IEnumerable<DACS.Models.RoomSchedule>

@{
    ViewData["Title"] = "Lịch Sử Dụng Phòng";
    Layout = "~/Areas/QL/Views/Shared/_QLLayout.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <style>
        body {
            background-color: #f8f9fa;
        }

        .text-primary {
            color: #6f42c1;
        }

        .text-secondary {
            color: #6c757d;
        }

        .table thead th {
            background-color: #f8f9fa;
            color: #343a40;
        }

        .table tbody td {
            color: #495057;
        }

        .btn-primary {
            background-color: #6f42c1;
            border-color: #6f42c1;
            color: #fff;
        }

        .btn-info {
            background-color: #17a2b8;
            border-color: #17a2b8;
            color: #fff;
        }

        .btn-danger {
            background-color: #dc3545;
            border-color: #dc3545;
            color: #fff;
        }

        .btn-success {
            background-color: #28a745;
            border-color: #28a745;
            color: #fff;
        }

        .btn-warning {
            background-color: #ffc107;
            border-color: #ffc107;
            color: #fff;
        }

            .btn-primary:hover,
            .btn-info:hover,
            .btn-danger:hover,
            .btn-success:hover,
            .btn-warning:hover {
                color: #fff;
            }

        .title {
            text-align: center;
            font-weight: bold;
            text-transform: uppercase;
            margin-bottom: 20px;
            color: #6f42c1;
        }

        .form-container {
            background-color: #fff;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            margin-bottom: 20px;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .form-group label {
            font-weight: bold;
            color: #343a40;
        }

        .filter-left {
            display: flex;
            align-items: center;
        }

            .filter-left .form-group {
                margin-right: 15px;
            }

        .filter-right {
            display: flex;
            align-items: center;
        }

            .filter-right .form-group {
                margin-right: 15px;
            }
    </style>
</head>
<body>
    <div class="container mt-5">
        <h1 class="title">@ViewData["Title"]</h1>
        <div class="form-container">
            <form method="get" asp-action="Index" class="filter-left">
                <div class="form-group">
                    <input type="date" name="selectedDate" class="form-control" value="@ViewBag.SelectedDate" />
                </div>
                <div class="form-group">
                    @Html.DropDownList("selectedCa", (SelectList)ViewBag.SelectedCa, "Chọn ca", new { @class = "form-control" })
                </div>
                <button type="submit" class="btn btn-primary">Lọc</button>
            </form>
            <form asp-action="Upload" method="post" enctype="multipart/form-data" class="filter-right">
                <div class="form-group">
                    <label for="file" class="form-label">Chọn file Excel</label>
                    <input type="file" class="form-control" id="file" name="file" />
                </div>
                <button type="submit" class="btn btn-primary ml-2">Tải Lên</button>
                <a asp-action="Create" class="btn btn-success ml-2">Tạo lịch sử dụng phòng</a>
            </form>
        </div>

        <table class="table table-bordered table-hover">
            <thead class="thead-light">
                <tr>
                    <th>Tên người dùng phòng</th>
                    <th>Mã phòng</th>
                    <th>Ngày học</th>
                    <th>Thời gian bắt đầu</th>
                    <th>Thời gian kết thúc</th>
                    <th>Tên môn học</th>
                    <th>Hành Động</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.GiangVien</td>
                        <td>@item.PhongHoc</td>
                        <td>@item.Ngay.ToString("dd-MM-yyyy")</td>
                        <td>@item.ThoiGianBatDau</td>
                        <td>@item.ThoiGianKetThuc</td>
                        <td>@item.MonHoc</td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Sửa</a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Xóa</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</body>
</html>
