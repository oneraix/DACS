@model DACS.Models.SupportRequest

@{
    ViewData["Title"] = "Lịch Sử Dụng Phòng";
    Layout = "~/Areas/KTV/Views/Shared/_KTVLayout.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <style>
        body {
            background-color: #f8f9fa;
        }

        .text-primary {
            color: #6f42c1;
        }

        .card {
            max-width: 600px;
            margin: 0 auto;
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }

            .card:hover {
                transform: scale(1.03);
                box-shadow: 0 10px 20px rgba(0, 0, 0, 0.2);
            }

        .card-header {
            font-size: 16px;
            background-color: #6f42c1;
            color: #fff;
            text-align: center;
            text-transform: uppercase;
            font-weight: bold;
        }

        .card-body {
            background-color: #fff;
            padding: 20px;
        }

        .form-group label {
            font-weight: bold;
        }

        .btn-primary {
            background-color: #6f42c1;
            border-color: #6f42c1;
            color: #fff;
        }

        .btn-secondary {
            background-color: #6c757d;
            border-color: #6c757d;
            color: #fff;
        }

        .btn-danger {
            background-color: #dc3545;
            border-color: #dc3545;
            color: #fff;
        }

            .btn-primary:hover,
            .btn-secondary:hover,
            .btn-danger:hover {
                color: #fff;
            }

        .title {
            text-align: center;
            font-weight: bold;
            text-transform: uppercase;
            margin-bottom: 20px;
            color: #6f42c1;
        }
    </style>
</head>
<body>
    <div class="container mt-5">
        <h1 class="title text-primary">@ViewData["Title"]</h1>
        <h3 class="text-center mb-4">Bạn có chắc chắn muốn xóa yêu cầu hỗ trợ này không?</h3>
        <div class="card">
            <div class="card-header">Chi tiết yêu cầu hỗ trợ</div>
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-4">Mô tả:</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Description)</dd>
                    <dt class="col-sm-4">Ngày báo cáo:</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.ReportDate)</dd>
                    <dt class="col-sm-4">Tình trạng:</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.IsResolved)</dd>
                    <dt class="col-sm-4">Mã phòng học:</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.MaPhongHoc)</dd>
                    <dt class="col-sm-4">Loại vấn đề:</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.IssueCategoryId)</dd>
                    <dt class="col-sm-4">Chi tiết vấn đề:</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.IssueDetailId)</dd>
                    <dt class="col-sm-4">Người dùng:</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.UserId)</dd>
                </dl>
                <form asp-action="DeleteConfirmed">
                    <input type="hidden" asp-for="RequestId" />
                    <div class="btn-container d-flex justify-content-between">
                        <input type="submit" value="Xóa" class="btn btn-danger" />
                        <a asp-action="Index" class="btn btn-secondary">Quay lại danh sách</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</body>
</html>
