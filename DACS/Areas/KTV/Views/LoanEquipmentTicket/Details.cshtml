@model DACS.Models.LoanEquipmentTicket

@{
    ViewData["Title"] = "Chi tiết Phiếu Mượn Thiết Bị";
    Layout = "~/Areas/KTV/Views/Shared/_KTVLayout.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <style>
        body {
            background-color: #f8f9fa;
        }

        .text-primary {
            color: #6f42c1;
        }

        .card-header {
            font-size: 1.25rem;
            background-color: #6f42c1;
            color: #fff;
            text-align: center;
            font-weight: bold;
            text-transform: uppercase;
        }

        .form-control-plaintext {
            padding: 0.375rem 0;
            margin-bottom: 0;
            color: #495057;
        }

        .btn-primary {
            background-color: #007bff;
            border-color: #007bff;
            color: #fff;
        }

        .btn-secondary {
            background-color: #6c757d;
            border-color: #6c757d;
            color: #fff;
        }

        .btn-danger {
            background-color: #dc3545;
            border-color: #dc3545;
            color: #fff;
        }

            .btn-primary:hover,
            .btn-secondary:hover,
            .btn-danger:hover {
                color: #fff;
            }

        .title {
            text-align: center;
            font-weight: bold;
            text-transform: uppercase;
            color: #6f42c1;
            margin-bottom: 20px;
        }

        .card {
            max-width: 800px;
            margin: auto;
            border: 1px solid #dee2e6;
            border-radius: 0.25rem;
            box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075);
        }
    </style>
</head>
<body>
    <div class="container mt-5">
        <h1 class="title">@ViewData["Title"]</h1>

        <div class="card">
            <div class="card-header">Chi tiết phiếu mượn</div>
            <div class="card-body">
                <div class="row mb-3">
                    <label class="col-sm-3 col-form-label">Mã Phiếu Mượn:</label>
                    <div class="col-sm-9">
                        <p class="form-control-plaintext">@Model.MaPhieuMuon</p>
                    </div>
                </div>
                <div class="row mb-3">
                    <label class="col-sm-3 col-form-label">Tên Người Mượn:</label>
                    <div class="col-sm-9">
                        <p class="form-control-plaintext">@Model.TenNguoiMuon</p>
                    </div>
                </div>
                <div class="row mb-3">
                    <label class="col-sm-3 col-form-label">Số Điện Thoại:</label>
                    <div class="col-sm-9">
                        <p class="form-control-plaintext">@Model.SDT</p>
                    </div>
                </div>
                <div class="row mb-3">
                    <label class="col-sm-3 col-form-label">Mã Thiết Bị Mượn:</label>
                    <div class="col-sm-9">
                        <p class="form-control-plaintext">@Model.MaThietBiMuon</p>
                    </div>
                </div>
                <div class="row mb-3">
                    <label class="col-sm-3 col-form-label">Số Lượng Mượn:</label>
                    <div class="col-sm-9">
                        <p class="form-control-plaintext">@Model.SoLuongMuon</p>
                    </div>
                </div>
                <div class="row mb-3">
                    <label class="col-sm-3 col-form-label">Ngày Mượn:</label>
                    <div class="col-sm-9">
                        <p class="form-control-plaintext">@Model.NgayMuon.ToString("yyyy-MM-dd")</p>
                    </div>
                </div>
                <div class="row mb-3">
                    <label class="col-sm-3 col-form-label">Ngày Trả:</label>
                    <div class="col-sm-9">
                        <p class="form-control-plaintext">@(Model.NgayTra?.ToString("yyyy-MM-dd") ?? "Chưa Trả")</p>
                    </div>
                </div>
                <div class="row mb-3">
                    <label class="col-sm-3 col-form-label">Mã Phòng Học:</label>
                    <div class="col-sm-9">
                        <p class="form-control-plaintext">@Model.MaPhongHoc</p>
                    </div>
                </div>
                <div class="text-end">
                    <a href="@Url.Action("Edit", new { id = Model.MaPhieuMuon })" class="btn btn-primary me-2">Chỉnh sửa</a>
                    <a href="@Url.Action("Delete", new { id = Model.MaPhieuMuon })" class="btn btn-danger">Xóa</a>
                    <a href="@Url.Action("Index")" class="btn btn-secondary">Quay lại danh sách</a>
                </div>
            </div>
        </div>
    </div>

    <script>
        document.querySelector('.btn-danger').addEventListener('click', function (event) {
            if (!confirm('Bạn có chắc chắn muốn xóa phiếu mượn này?')) {
                event.preventDefault();
            }
        });
    </script>
</body>
</html>
